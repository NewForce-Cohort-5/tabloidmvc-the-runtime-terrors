@model TabloidMVC.Models.Tag

@{
    ViewData["Title"] = "Delete";
}

<div class="container pt-5">
    <div class="post">
        <section class="px-3">
            <div class="col">
                <h4 class="text-secondary">Are you sure you want to delete this tag?</h4>
                <h5 class="text-secondary mt-3"><span class="font-weight-normal">Tag Name:</span> #@Html.DisplayFor(model => model.Name)</h5>
                <form asp-action="Delete" class="mt-5">
                    <input type="submit" value="Delete" class="btn btn-outline-primary mb-3" />
                    <br />
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>
        </section>
    </div>
</div>