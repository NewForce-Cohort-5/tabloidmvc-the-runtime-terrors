@model TabloidMVC.Models.Tag

@{
    ViewData["Title"] = "Delete";
}

<div class="container pt-5">
    <div class="post row justify-content-center">
        <section class="card col-md-12 col-lg-8 pt-5 pr-3 pl-3 pb-4">
            <div class="col">
                <h3 class="text-primary text-center card-title mb-5">
                    Are you sure you want to delete&nbsp;this&nbsp;tag?
                </h3>
                <div class="row justify-content-center col-md-6 card text-primary mx-auto">
                    <h4 class="text-primary text-center pt-3 pb-2 pl-1 pr-1">
                        #@Html.DisplayFor(model => model.Name)&nbsp;
                    </h4>
                </div>
                <form asp-action="Delete" class="mt-5">
                    <input type="submit" value="Delete" class="btn btn-primary mb-3" />
                </form>
                <div class="mt-2 mb-3">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </section>
    </div>
</div>